@model PortfolioProjectNight.Models.SocialMedia

@{
    ViewBag.Title = "UpdateSocialMedia";
    Layout = "~/Views/Admin/Index.cshtml";
}


<h2 class="mb-4">Sosyal Medya Güncelleme</h2>

<form method="post">
    @Html.HiddenFor(x => x.SocialMediaId)
    <label>Deneyim Başlığı</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />
    <label>Deneyim Alt Başlığı</label>
    @Html.TextBoxFor(x => x.Url, new { @class = "form-control" })
    <br />
    <label>Deneyim Açıklaması</label>
    @Html.TextAreaFor(x => x.Icon, new { @class = "form-control" })
    <br />
    <button class="btn btn-success"> Sosyal Medya Güncelle</button>
</form>

