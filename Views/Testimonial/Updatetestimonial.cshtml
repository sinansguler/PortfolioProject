@model PortfolioProjectNight.Models.Testimonial
@{
    ViewBag.Title = "Updatetestimonial";
    Layout = "~/Views/Admin/Index.cshtml";
}

<form method="post">
    @Html.HiddenFor(x => x.TestiMonialID)
    <label>Adı Soyadı</label>
    @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control" })
    <br />
    <label>Unvan</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />
    <label>Açıklama</label>
    @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
    <br />
    <label>Fotoğraf 1</label>
    @Html.TextAreaFor(x => x.Photo, new { @class = "form-control" })
    <br />
    <label>Fotoğraf 2</label>
    @Html.TextAreaFor(x => x.Photo2, new { @class = "form-control" })
    <br />
    <button class="btn btn-success"> Yeni Hakkımda Referans Güncelle</button>
</form>

