@model List<PortfolioProjectNight.Models.About>
@{
    ViewBag.Title = "AboutList";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2 class="mb-4">Hakkımda</h2>

<table class="table table-bordered">

    <tr>
        <th></th>
        <th>Title</th>
        <th>Description</th>
        <th>ImageUrl</th>
        <td>Cv</td>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {


        <tr>
            <td>@item.AboutId</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td><img src="@item.ImageUrl" class="col-xl-5" alt="Image"></td>
            <td>@item.Cv</td>
            <td><a href="/About/UpdateAbout/@item.AboutId" class="btn btn-success">Güncelle</a></td>
        </tr>

    }
</table>




