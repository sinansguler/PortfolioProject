@model List<PortfolioProjectNight.Models.Education>

@{
    ViewBag.Title = "EducationList";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2 class="mb-4">Eğitim Hayatı Listem</h2>

<table class="table table-bordered">

    <tr>
        <th>Id</th>
        <th>Başlık</th>
        <th>Alt Başlık</th>
        <th>2. Başlık</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {


    <tr>
        <td>@item.EducationId</td>
        <td>@item.Title</td>
        <td>@item.SubTitle</td>
        <td>@item.Description</td>
        <td><a href="/Education/DeleteEducation/@item.EducationId" class="btn btn-danger">Sil</a></td>
        <td><a href="/Education/UpdateEducation/@item.EducationId" class="btn btn-success">Güncelle</a></td>
    </tr>

    }
</table>
    
<td><a href="/Education/CreateEducation/" class="btn btn-success">Yeni Eğitim Bilgisi Girişi</a></td>


