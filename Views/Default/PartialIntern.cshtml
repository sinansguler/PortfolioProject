@model  List<PortfolioProjectNight.Models.Intern>

@{
    Layout = null;
}
<div class="container-fluid" id="pigraService">
    <div class="container">
        <div class="row g-0">
            <div class="col-lg-3">
                <div class="service-header h-100 bg-dark pt-6 pe-6 pb-6">
                    <div class="text-start d-flex flex-column justify-content-center wow fadeInUp" data-wow-delay="0.1s">
                        <p class="text-white sub-title">Staj</p>
                        <h1 class="display-6 text-white mb-0">Staj Yerlerim</h1>
                    </div>
                </div>
            </div>
            <div class="col-lg-9">
                <div class="service-content h-100 pt-6 ps-6 pb-6">
                    <div class="row g-4">
                        <div class="col-12">
                            @foreach (var item in Model)
                            {
                                <div class="service-item p-4 wow fadeInUp" data-wow-delay="0.1s">
                                    <div class="row g-4 align-items-center">
                                        <div class="col-xl-2">
                                            <i class="fas fa-bezier-curve fa-3x"></i>
                                        </div>



                                        <div class="col-xl-3">
                                            <a href="#" class="h4 mb-0">@item.InternCompany</a>
                                        </div>
                                        <div class="col-xl-4">
                                            <p class="mb-0">
                                                @item.InternYear
                                            </p>
                                        </div>
                                        <div class="col-xl-3">
                                            <p><i class="fa fa-check me-2"></i> @item.InternWhatyoudid</p>
                                        </div>

                                    </div>
                                </div>
                                <br />
                            }

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>